<div class="container">
  <h1><span><%=@restaurant.name%></span></h1>
    <div><%=@restaurant.address%></div>
    <div><%=@restaurant.phone_number%></div>

    <%= link_to "Back to List", restaurants_path %>
    <%= link_to "New Restaurant", new_restaurant_path %>
    <%= link_to "Edit Restaurant", edit_restaurant_path %>
    <%= link_to "Delete",
      restaurant_path(@restaurant),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
    <%= link_to "Create a Review", new_restaurant_review_path(@restaurant)%>

    <p><strong>Reviews</strong></p>
    <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
    <%= review.content %>
    Rating :<%= review.rating %></li>
    <%= link_to "Delete",
    review_path(review),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
    <% end %>
    </ul>
  <br>
</div>
